    <div>
        @RenderBody()
    </div>
    <div class="container-fluid footer-section" style="background-color: black;">
        <footer>
            <div class="footer-content">


                <nav class="nav footer-nav justify-content-space-evenly">
                    <div class="footer-logo"><img src="assets/white-logo-transparent-background.png"></div>
                    <a class="nav-link footer-data" href="">Home</a>
                    <a class="nav-link footer-data" asp-action="About" asp-controller="Home">About</a>
                    <a class="nav-link footer-data" href="">Testimonials</a>
